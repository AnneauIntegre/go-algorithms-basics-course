{
  "name": "slidev-theme-shodo",
  "version": "0.0.0",
  "type": "module",
  "author": "Manon Carbonnel",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=18.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "build": "slidev build slides.md",
    "dev": "slidev slides.md",
    "export": "slidev export slides.md",
    "screenshot": "slidev export slides.md --dark --format png --timeout 60000",
    "pdf": "slidev export slides.md --format pdf --timeout 60000",
    "lint": "stylelint '**/*.css'",
    "format": "stylelint '**/*.css' --fix && prettier . --write"
  },
  "dependencies": {
    "@slidev/theme-default": "^0.25.0",
    "@slidev/theme-seriph": "^0.25.0",
    "@slidev/types": "^0.49.11",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.5"
  },
  "devDependencies": {
    "@slidev/cli": "^0.49.29",
    "playwright-chromium": "^1.44.1",
    "prettier": "^3.3.2",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-tailwindcss": "^0.0.7"
  },
  "//": "Learn more: https://sli.dev/themes/write-a-theme.html",
  "slidev": {
    "colorSchema": "both",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Inter",
        "mono": "Fira Code",
        "local": "Bluu Next"
      }
    }
  }
}
